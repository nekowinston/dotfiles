/* Confirm Dialog */

@import "colors.rasi"

* {
  background-color: @base;
  text-color:       @text;
  font:             "Berkeley Mono 10";
}

window {
  width:            225px;
  padding:          25px;
  border:           0px;
  border-radius:    0px;
  border-color:     @pink;
  location:         center;
  y-offset:         -2em;
}

entry {
  expand:           true;
  text-color:       @text;
}
